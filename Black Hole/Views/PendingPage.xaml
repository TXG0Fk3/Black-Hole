<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Black_Hole.Views.PendingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Black_Hole.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        RowDefinitions="Auto, Auto, Auto, Auto, Auto"
        RowSpacing="8">
        <Border
            Grid.Row="0"
            Width="180"
            Height="180"
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            Background="AliceBlue"
            CornerRadius="12">
            <FontIcon FontSize="120" Glyph="&#xE7C3;" />
        </Border>
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            FontSize="32"
            Style="{StaticResource BodyStrongTextBlockStyle}"
            Text="Your Transmission Code" />
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            FontSize="16"
            Style="{StaticResource BodyTextBlockStyle}"
            Text="&quot;The Elder Scrolls V: Skyrim.zip&quot; 12GB." />
        <StackPanel
            Grid.Row="3"
            Margin="0,12,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBox
                x:Name="textBox"
                Width="260"
                Margin="0,0,10,0"
                IsReadOnly="True"
                Text="1-conformist-cobra-reproduce-goggles" />
            <Button
                Width="35"
                Height="35"
                Padding="0">
                <FontIcon Glyph="&#xE8C8;" />
            </Button>
        </StackPanel>
        <TextBlock
            Grid.Row="4"
            Margin="0,12,0,0"
            HorizontalAlignment="Center"
            FontSize="16"
            Style="{StaticResource BodyTextBlockStyle}"
            Text="Send the Code to the Receiver." />
    </Grid>
</Page>
